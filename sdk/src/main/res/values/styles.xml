<resources>

    <!-- Base application theme. -->
    <style name="sdkTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/bgblue</item>
        <item name="colorPrimaryDark">@color/bgblue</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <!-- 非溢出菜单字体颜色，想要修改溢出菜单内的字体颜色只能直接设置textColorPrimary但此选项会影响Title的颜色-->
        <!--<item name="actionMenuTextColor">#FFFFFF</item>-->
        <item name="colorPrimary">@color/bgblue</item>
        <item name="colorPrimaryDark">@color/bgblue</item>
        <item name="android:textSize">16sp</item> <!-- 字体大小 -->
    </style>

</resources>
